<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
	    <TargetFrameworks>netstandard2.0;net8;net9</TargetFrameworks>
        <LangVersion>latest</LangVersion>
        <Authors>Richard Ramer</Authors>
        <PackageId>Expectable</PackageId>
        <Description>Define an expected exception with optional expectations.</Description>
        <PackageProjectUrl>https://github.com/raramer/Expectable</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>expected exception;expected;exception</PackageTags>
	    <PackageReadmeFile>README.md</PackageReadmeFile>
        <Version>1.0.1</Version>
    </PropertyGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Expectable.Tests" />
		<None Include="..\README.md" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
